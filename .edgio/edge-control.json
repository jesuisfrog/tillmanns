{
  "name": "bp-static-build",
  "origins": [],
  "rules": [
    {
      "if": [
        {
          "and": [
            {
              "==": [
                {
                  "request": "path"
                },
                "/:path*"
              ]
            },
            {
              "===": [
                {
                  "request": "method"
                },
                "GET"
              ]
            }
          ]
        },
        {
          "caching": {
            "max_age": {
              "200": "1y"
            }
          },
          "origin": {
            "set_origin": "edgio_static"
          },
          "url": {
            "url_rewrite": [
              {
                "source": "/:path*:optionalSlash(\\/?)?:optionalQuery(\\?.*)?",
                "syntax": "path-to-regexp",
                "destination": "/src/:path*"
              }
            ]
          }
        }
      ]
    },
    {
      "if": [
        {
          "and": [
            {
              "==": [
                {
                  "request": "path"
                },
                "/"
              ]
            },
            {
              "===": [
                {
                  "request": "method"
                },
                "GET"
              ]
            }
          ]
        },
        {
          "caching": {
            "max_age": {
              "200": "1y"
            }
          },
          "origin": {
            "set_origin": "edgio_static"
          },
          "url": {
            "url_rewrite": [
              {
                "source": "/:optionalSlash(\\/?)?:optionalQuery(\\?.*)?",
                "syntax": "path-to-regexp",
                "destination": "/src/index.html"
              }
            ]
          }
        }
      ]
    },
    {
      "if": [
        {
          "==": [
            {
              "request": "path"
            },
            "/__edgio__/devtools/:path*"
          ]
        },
        {
          "caching": {
            "max_age": {
              "200": "1y"
            },
            "bypass_client_cache": true
          },
          "origin": {
            "set_origin": "edgio_static"
          },
          "url": {
            "url_rewrite": [
              {
                "source": "/__edgio__/devtools/:path*:optionalSlash(\\/?)?:optionalQuery(\\?.*)?",
                "syntax": "path-to-regexp",
                "destination": "/node_modules\\@edgio\\devtools\\widget\\:path*"
              }
            ]
          }
        }
      ]
    },
    {
      "if": [
        {
          "and": [
            {
              "==": [
                {
                  "request": "path"
                },
                "/__edgio__/devtools/enable"
              ]
            },
            {
              "===": [
                {
                  "request": "method"
                },
                "GET"
              ]
            }
          ]
        },
        {
          "headers": {
            "add_response_headers": {
              "set-cookie": "edgio_devtools_enabled=true; Path=/"
            }
          },
          "caching": {
            "bypass_cache": true,
            "bypass_client_cache": true
          },
          "url": {
            "url_rewrite": [
              {
                "source": "/:path*:optionalSlash(\\/?)?:optionalQuery(\\?.*)?",
                "syntax": "path-to-regexp",
                "destination": "/:path*:optionalSlash:optionalQuery"
              }
            ],
            "url_redirect": {
              "code": 302,
              "source": "/__edgio__/devtools/enable:optionalSlash(\\/?)?:optionalQuery(\\?.*)?",
              "syntax": "path-to-regexp",
              "destination": "/"
            }
          }
        }
      ]
    },
    {
      "if": [
        {
          "and": [
            {
              "==": [
                {
                  "request": "path"
                },
                "/__edgio__/devtools/disable"
              ]
            },
            {
              "===": [
                {
                  "request": "method"
                },
                "GET"
              ]
            }
          ]
        },
        {
          "headers": {
            "add_response_headers": {
              "set-cookie": "edgio_devtools_enabled=false; Path=/"
            }
          },
          "caching": {
            "bypass_cache": true,
            "bypass_client_cache": true
          },
          "url": {
            "url_rewrite": [
              {
                "source": "/:path*:optionalSlash(\\/?)?:optionalQuery(\\?.*)?",
                "syntax": "path-to-regexp",
                "destination": "/:path*:optionalSlash:optionalQuery"
              }
            ],
            "url_redirect": {
              "code": 302,
              "source": "/__edgio__/devtools/disable:optionalSlash(\\/?)?:optionalQuery(\\?.*)?",
              "syntax": "path-to-regexp",
              "destination": "/"
            }
          }
        }
      ]
    },
    {
      "if": [
        {
          "==": [
            {
              "request": "path"
            },
            "/:path*"
          ]
        },
        {
          "headers": {
            "debug_header": true
          }
        }
      ]
    },
    {
      "if": [
        {
          "=~": [
            {
              "request.header": "host"
            },
            "\\.edgio\\.link|\\.edgio-perma\\.link"
          ]
        },
        {
          "headers": {
            "add_response_headers": {
              "x-robots-tag": "nofollow, noindex"
            }
          }
        }
      ]
    }
  ],
  "edge_functions": {}
}